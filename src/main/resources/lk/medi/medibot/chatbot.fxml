    <TextArea fx:id="chatArea" editable="false" prefHeight="326.0" prefWidth="845.0" translateY="-15.0" wrapText="true" />

    <HBox spacing="10">
        <TextField fx:id="userInput" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" prefHeight="26.0" prefWidth="719.0" HBox.hgrow="ALWAYS">
         <cursor>
            <Cursor fx:constant="S_RESIZE" />
         </cursor></TextField>
        <Button onAction="#handleSend" prefHeight="26.0" prefWidth="177.0" style="-fx-background-color: green; -fx-border-radius: 20px;" text="Send" textAlignment="CENTER">
