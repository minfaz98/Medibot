<VBox fx:id="appointmentPane" spacing="5" visible="false">
<Label text="Book Appointment"/>
<HBox spacing="5">
   <Label text="Doctor:"/>
   <ComboBox fx:id="doctorDropdown" promptText="Select Doctor"/>
</HBox>
<HBox spacing="5">
   <Label text="Name:"/>
   <TextField fx:id="nameField"/>
</HBox>
<HBox spacing="5">
   <Label text="Phone:"/>
   <TextField fx:id="phoneField"/>
</HBox>
<HBox spacing="10">
   <Button text="Book Appointment" onAction="#handleBookAppointment"/>
   <Button text="Cancel" onAction="#hideAppointmentPane"/>
</HBox>
</VBox>

<VBox fx:id="cancelPane" spacing="5" visible="false">
<Label text="Cancel Appointment"/>
<HBox spacing="5">
   <Label text="Appointment ID:"/>
   <TextField fx:id="cancelIdField"/>
</HBox>
<HBox spacing="10">
   <Button text="Cancel Appointment" onAction="#handleCancelAppointment"/>
   <Button text="Close" onAction="#hideCancelPane"/>
</HBox>
</VBox>

